<div>
  Welcome <%= current_user.first_name %>
</div>
<%= link_to 'Edit Registration', edit_user_registration_path %>
<%= link_to 'log Out', destroy_user_session_path, method: :delete %>
<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Value</th>
      <th>Presentation</th>
      <th>Texture</th>
      <th>Napkins used</th>
      <th>Taste</th>
      <th>Gut feel under 30</th>
      <th>Gut feel after 30</th>
      <th>Order accuracy</th>
      <th>Sauce level</th>
      <th>Notes</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="reviews">
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.restaurant.name %></td>
        <td><%= review.value %></td>
        <td><%= review.presentation %></td>
        <td><%= review.texture %></td>
        <td><%= review.napkins_used %></td>
        <td><%= review.taste %></td>
        <td><%= review.gut_feel_under_30 %></td>
        <td><%= review.gut_feel_after_30 %></td>
        <td><%= review.order_accuracy %></td>
        <td><%= review.sauce_level %></td>
        <td><%= review.notes %></td>
        <td><%= review.user.first_name %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% Restaurant.all.each do |restaurant| %>
      <%= restaurant.name %>
      <% length = restaurant.reviews.length %>
      <%=
        bar_chart [
          { name: 'Value', data: [['Value', restaurant.reviews.map{ |t| t.value }.any? ? restaurant.reviews.map{ |t| t.value }.sum / length : 0]] },
          { name: 'Presentation', data: [['Presentation', binding.pry ]] },
          { name: 'Texture', data: [['Texture', restaurant.reviews.map{ |t| t.texture }.any? ? restaurant.reviews.map{ |t| t.texture }.sum / length : 0]] }

          # { name: "Napkins Used", data: restaurant.reviews.map{ |t| t.napkins_used.to_f }.any? ? restaurant.reviews.map{ |t| t.napkins_used.to_f }.sum / length : 0 },
          # { name: "Taste", data: restaurant.reviews.map{ |t| t.taste }.any? ? restaurant.reviews.map{ |t| t.taste }.sum / length : 0 },
          # { name: "Gut Feel Under 30min", data: restaurant.reviews.map{ |t| t.gut_feel_under_30 }.any? ? restaurant.reviews.map{ |t| t.gut_feel_under_30 }.sum / length : 0 },
          # { name: "Gut Feel After 30min", data: restaurant.reviews.map{ |t| t.gut_feel_after_30 }.any? ? restaurant.reviews.map{ |t| t.gut_feel_after_30 }.sum / length : 0 },
          # { name: "Order Accuracy", data: restaurant.reviews.map{ |t| t.order_accuracy }.any? ? restaurant.reviews.map{ |t| t.order_accuracy }.sum / length : 0 },
          # { name: "Sauce Level", data: restaurant.reviews.map{ |t| t.sauce_level }.any? ? restaurant.reviews.map{ |t| t.sauce_level }.sum / length : 0 }
        ] 
      %>
    <% end %>

